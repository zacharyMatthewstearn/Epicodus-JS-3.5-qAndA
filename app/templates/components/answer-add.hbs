{{#if addAnswerFormIsOpen}}
  <button {{action 'closeAddAnswerForm'}}>Cancel New Answer</button>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveAnswer1'}}>Answer!</button>
    </form>
  </div>
{{else}}
  <button {{action 'openAddAnswerForm'}}>Provide a New Answer</button>
{{/if}}
