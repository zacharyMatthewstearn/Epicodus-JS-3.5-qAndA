{{#if addQuestionFormIsOpen}}
  <button {{action 'closeAddQuestionForm'}}>Cancel New Question</button>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'saveQuestion1'}}>Ask!</button>
    </form>
  </div>
{{else}}
  <button {{action 'openAddQuestionForm'}}>Ask a New Question</button>
{{/if}}
