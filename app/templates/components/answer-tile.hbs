<li class="tile answer">
  <div class="container">
    <div class="row">
      <div class="col-xs-1">
        <span {{action 'upvote1' answer}} class="upvote glyphicon glyphicon-arrow-up"></span>
        <br>
        <h3 class="votes">{{answer.votes}}</h3>
        <br>
        <span {{action 'downvote1' answer}} class="downvote glyphicon glyphicon-arrow-down"></span>
      </div>
      <div class="col-xs-11">
        <h1>{{answer.content}}</h1>
        <h2>{{answer.author}}</h2>
      </div>
    </div>
  </div>
</li>
