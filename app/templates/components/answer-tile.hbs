<li class="tile answer">
  <div class="container">
    <div class="row">
      <div class="col-xs-1">
        <span {{action 'upvote1' answer}} class="upvote pos glyphicon glyphicon-arrow-up"></span>
        <br>
        {{pos-or-neg answer.votes}}
        <br>
        <span {{action 'downvote1' answer}} class="downvote neg glyphicon glyphicon-arrow-down"></span>
        <br>

      </div>
      <div class="col-xs-11">
        <h1>{{answer.content}}</h1>
        <h2>{{answer.author}}</h2>
      </div>
    </div>
  </div>
</li>
